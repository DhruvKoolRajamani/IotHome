                                    <Button x:Name="btnUpperTankSensor" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin = "2,2,2,0" Click="BtnUpperTankSensor_Click" Height="46">Trigger</Button>
                                </Grid>

